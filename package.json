{
  "name": "sport-garant",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "homepage": "https://Clevertec-ru.github.io/sport-garant/",
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "lint-css": "arui-presets-lint styles",
    "lint-scripts": "arui-presets-lint scripts",
    "format": "arui-presets-lint format",
    "format:check": "arui-presets-lint format:check",
    "lint": "yarn lint-css && yarn lint-scripts && yarn format:check",
    "lint:fix": "yarn lint-css --fix && yarn lint-scripts --fix && yarn format",
    "preview": "vite preview",
    "predeploy": "yarn build",
    "deploy": "gh-pages -d dist"
  },
  "dependencies": {
    "@alfalab/core-components": "47.24.1",
    "@reduxjs/toolkit": "^2.3.0",
    "@types/react-redux": "^7.1.34",
    "classnames": "^2.5.1",
    "date-fns": "^4.1.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "normalize.css": "^8.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.53.1",
    "react-redux": "^9.1.2",
    "react-router-dom": "^6.27.0"
  },
  "devDependencies": {
    "@types/node": "^22.8.6",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "arui-presets-lint": "8.0.0",
    "eslint-define-config": "^2.1.0",
    "gh-pages": "^6.2.0",
    "globals": "^15.11.0",
    "typescript": "~5.6.2",
    "vite": "^5.4.10"
  },
  "eslintConfig": {
    "extends": [
      "arui-presets-lint/eslint"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": "arui-presets-lint/prettier",
  "commitlint": {
    "extends": "./node_modules/arui-presets-lint/commitlint",
    "rules": {
      "subject-case": [
        2,
        "never",
        [
          "start-case",
          "pascal-case",
          "upper-case"
        ]
      ],
      "header-max-length": [
        2,
        "always",
        150
      ]
    }
  }
}
